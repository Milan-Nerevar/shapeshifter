<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="eu.nerevar.sample.circle.CircleViewModel" />

        <variable
            name="model"
            type="eu.nerevar.sample.circle.CircleModel" />
    </data>

    <AbsoluteLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_x="0dp"
            android:layout_y="0dp"
            android:onClick="@{() -> viewModel.navigateToNextFragment()}"
            android:src="@drawable/circle_24dp"
            app:colorTint="@{model.color}" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.pop()}"
                android:text="Pop" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.popWhole()}"
                android:text="Pop whole" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> viewModel.navigateToRootFragment()}"
                android:text="Go to root" />

        </LinearLayout>

    </AbsoluteLayout>

</layout>

